{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@top-x/shared/types/*": ["../packages/shared/dist-node/types/*"],
      "@top-x/shared/utils/*": ["../packages/shared/dist-node/utils/*"]
    },
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/**/*"],
  "references": []
}
