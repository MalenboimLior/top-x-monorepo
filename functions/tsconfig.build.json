{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@top-x/shared/*": ["../packages/shared/src/*"],
      "@top-x/shared/types/*": ["../packages/shared/src/types/*"],
      "@top-x/shared/utils/*": ["../packages/shared/src/utils/*"]
    },
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../packages/shared/tsconfig.json" }
  ]
}