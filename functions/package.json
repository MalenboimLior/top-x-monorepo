    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@top-x/shared": "file:top-x-shared-1.0.0.tgz",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^7.0.2",
    "oauth-1.0a": "^2.2.6",
    "twitter-api-v2": "^1.25.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/node": "^20.0.0",
    "firebase-functions-test": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "private": true
}
