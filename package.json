{
  "name": "top-x-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions"
  ],
  "scripts": {
    "build:shared": "npm run build --workspace=packages/shared",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:client": "npm run build:prerender --workspace=apps/client",
    "build:functions": "npm run build --workspace=functions",
    "build": "npm run build --workspaces --if-present",
    "deploy": "npm run build:client && npm run build:functions && firebase deploy",
    "deploy:hosting": "npm run build:client && firebase deploy --only hosting",
    "deploy:functions": "npm run build:functions && firebase deploy --only functions"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@top-x/shared": "file:./packages/shared",
    "firebase": "^11.6.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10"
  }
}