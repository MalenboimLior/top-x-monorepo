{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@top-x/shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@top-x/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@top-x/shared/types/*": [
        "../../packages/shared/src/types/*"
      ],
      "@top-x/shared/types/pacman": [
        "../../packages/shared/src/types/pacman.ts"
      ]
    },
    "types": [
      "vite/client",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "migrateUsers.js",
    "vite-env.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}