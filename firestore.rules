rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the game creator
    function isGameCreator() {
      return isAuthenticated() && 
             resource.data.creator.userid == request.auth.uid;
    }
    
    // Games collection
    match /games/{gameId} {
      // Anyone can read games
      allow read: if true;
      
      // Only authenticated users can create games
      // Creator must match authenticated user
      allow create: if isAuthenticated() && 
                       request.resource.data.creator.userid == request.auth.uid;
      
      // Only the game creator can update their own games
      allow update: if isGameCreator();
      
      // Only the game creator can delete their own games
      allow delete: if isGameCreator();
      
      // Subcollections
      match /{subcollection=**} {
        allow read: if true;
        allow write: if isGameCreator();
      }
    }
    
    // Default: allow read for everything else, restrict writes
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}